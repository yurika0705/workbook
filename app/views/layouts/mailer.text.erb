<%# ④ %>  <%# 足し算 %>
          def addition(a, b)             <%# ③で代入された X,Yが a,bに再代入される %>
            a + b
          end

<%# ⑤ %>  <%# 掛け算 %>
          def multiplication(a, b)        <%# ③で代入された X,Yが a,bに再代入される %>
            a * b
          end

<%# ② %>  <%# 10の位、1の位を求める %>
          def slice_num(num)
            tens_plice = (num / 10) % 10  <%# 数字を10で割り、さらにそれを10で割った余りが10の位 %>
            ones_price = num % 10         <%# 数字を10で割った余りが1の位 %>
            return tens_plice, ones_plice <%# 10の位、1の位を返す %>
          end

<%# ① %>  puts "二桁の整数を入力してください"
          input = gets.to_i

<%# ③ %>  X, Y = slice_num(input)         <%# slice_numで返された10の位、1の位を変数 X,Yに代入 %>

<%# ⑥ %>  add_result = addition(X, Y)     <%# ④の足し算の結果をadd_resultに代入 %>

<%# ⑦ %>  multiple_result = multiplication(X, Y) <%# ⑤の掛け算の結果をmultiple_resultに代入 %>

<%# ⑧ %>  puts "足し算結果と掛け算結果の合計値は#{add_result + multiple_result}です" <%# 最後にadd_resultとmultiple_resultを足して文字列に含め、出力 %>